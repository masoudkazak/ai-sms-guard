# Environment
APP_ENV=DEV

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=postgresql+asyncpg://smartrabbit:smartrabbit@postgres:5432/smartrabbit
POSTGRES_USER=smartrabbit
POSTGRES_PASSWORD=smartrabbit
POSTGRES_DB=smartrabbit

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_MAIN_QUEUE=sms_main
RABBITMQ_REVIEW_QUEUE=sms_review
RABBITMQ_DLQ=sms_dlq

# Worker - Rule thresholds (cost-aware: avoid unnecessary SMS and AI)
DUPLICATE_WINDOW_SECONDS=300
MAX_RETRY_BEFORE_DLQ=3
MULTIPART_SEGMENT_THRESHOLD=2

# OpenRouter (AI Guard - only when needed)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=15

# Streamlit
STREAMLIT_PORT=8501
BACKEND_URL=http://backend:8000
DATABASE_URL_SYNC=postgresql://smartrabbit:smartrabbit@postgres:5432/smartrabbit
